import { Ref } from "vue";
import { defineStore } from "pinia";
import { MobilettoOrmValidationErrors } from "mobiletto-orm";
import { {{Name}}Type, {{Name}}TypeDef } from "yuebing-model";
import { {{name}}Service } from "~/utils/services/model/{{name}}Service";
import { MobilettoOrmFindApiOpts } from "~/utils/search";
